<%= form_for(@field) do |f| %>
  <% if @field.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@field.errors.count, "error") %> prohibited this field from being saved:</h2>

      <ul>
      <% @field.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :order %><br>
    <%= f.number_field :order %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :tipo %><br>
    <%= f.select :tipo, Field.tipos %>
  </div>
  <div class="field">
    <%= f.label :values %><br>
    <%= f.text_area :values %>
  </div>
  <%= f.hidden_field :sub_category_id, :value => @sub_category.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
